<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bgmainactivity">
    <!-- Layout xml file for the main activity class-->
    <!-- Make sure to reference this file in your class OnCreate Method -->
    <!-- Video Copyright 2015 ClientUser.net, Zoran Ilievski -->
    <!-- Use setContentView(R.layout.activity_main); -->

        <TextView
            android:text="@string/hello_world" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>
        <!-- A ClientUser.net video tutorial -->


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/textView"
            android:id="@+id/activity_main_scrollview"
            >



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method 1"
        android:id="@+id/button_myfirstbutton_m1"
        android:onClick="sendMessage"/>
    <!--More tutorials at ClientUser.net -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method 2"
        android:id="@+id/button_myfirstbutton_m2"/>
    <!--A ClientUser.net tutorial -->


        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coin Up"
        android:id="@+id/button_coinsound"/>
        <!--A ClientUser.net tutorial -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coin Low"
            android:id="@+id/button_lowsound"/>
        <!--A ClientUser.net tutorial -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application Sound"
            android:id="@+id/button_appsound"/>
        <!--A ClientUser.net tutorial -->



        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_myfirstbutton"
        android:onClick="sendMessage"
        android:src="@drawable/varbuttonlogoclientuser"
        android:background="@null"/>

    </LinearLayout>

        </ScrollView>

    <GridView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/activity_main_gridView"
        android:numColumns="3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_main_scrollview" />


</RelativeLayout>
